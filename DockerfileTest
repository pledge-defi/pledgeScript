ENV FINANCE_ADDRESS_SERECT=...



RUN mkdir -p /code
RUN mkdir -p /logs
ADD . /code
WORKDIR /code

RUN pip install --upgrade pip setuptools==45.2.0
RUN pip install -r requirements.txt 
